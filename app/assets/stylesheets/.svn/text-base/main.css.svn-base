/* CSS for payleap DK*/


body {
    background: url("/assets/bg_home.png") repeat-x scroll 0 0 #FFFFFF;
    color: #626262;
    font-family: sans-serif,arial;
	font-size:12px;
}
  
*{margin:0px;
padding:0px;
}
.clearfix:after {
    clear: both;
}
.clearfix:before, .clearfix:after {
    content: " ";
    display: block;
    height: 0;
    visibility: hidden;
}

a {
     color: #3EA0C3;
    font-size: 100%;
    margin: 0;
    padding: 0;
    text-decoration: none;
    vertical-align: baseline;
}

 h1 {
    font-size: 20px;
    font-weight: 700;
    line-height: 24px;
    margin-bottom: 10px;
}
  h1, h2, h3 {
 	color:#98C520; 
}
 
#container {
    background: none;
    margin: 0 auto;
    padding: 0;
    width: 960px;  
}

#banner {
    background: none;
    height: 80px;
    position: relative;
    width: 100%;
 }
 
#banner .logo {
    float: left;
    padding: 10px;
}
 
#banner .logo{
    background: url("/assets/PayLeapRevisedLogo.png") no-repeat scroll 0 -5px transparent;
    float: left;
    height: 51px;
    text-indent: -9999px;
    width: 157px;
}
#banner ul{
    float: left;margin-left:50px;
	
}
#banner ul {
    list-style: none outside none;
}
#banner ul li {
    background: url("/assets/nav_divider.png") no-repeat scroll 0 0 transparent;
    float: left;
    height: 60px;
    padding: 0 0 0 2px;
    position: relative;
}
#banner ul li a {
    color: #7E7E7E;
    display: block;
    font-size: 18px;
    font-weight: 500;
    line-height: 60px;
    padding: 0 13px;
    text-shadow: 0 1px 0 #FFFFFF;text-decoration:none
}
#banner ul li a:hover {
    color: #333333;
}


#banner ul li a.current-page {
    color: #2A2A2A;
  }
 

.submit {
    background:#1E99C1;
    border: medium none;
    border-radius: 4px 4px 4px 4px;
    color: #FFFFFF;
    cursor: pointer;
    height: 30px;
 	font-size:14px;
	font-weight:bold;
	padding:0px 20px 0px 20px;
}
.submit:hover {
     color: #DDDDDD;
	 background:#247f9d;
 }
#subnav {
    background: url("/assets/sep_flat.png") no-repeat scroll right top transparent;
    float: left;
    min-height:450px;
    padding: 0 10px 0 10px;
    width: 170px;
}

#subnav ul li {
    border: 0 none;
    font-size: 14px;
    font-weight: 500;
    line-height: 24px;
    margin: 0;
    padding: 0;
 	list-style: none outside none;
}
 
#subnav ul li a {
    color: #838383;
    display: block;
    font-size: 14px;
    font-weight: 500;
    line-height: 24px; text-decoration:none;
}
#subnav ul li a:hover {
    color: #484848;
    padding-left: 2px;
}
#sidenav a.current-page {
    color: #2A2A2A;
    font-size: 14px;
    font-weight: 900;
    line-height: 24px;
}

 #subnav ul li.current-page a:hover {
    color: #2A2A2A;
    padding-left: 0;
}
 #subnav ul li:first-child {
    color: #B7B8B8;
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    text-transform: uppercase;
}
 
 #content {
    float: left;
    min-height:450px;
    padding:0px 10px 10px 0px;
    width: 750px; 
}
  
  
 #footer {
     border-top: 1px solid #EAEAEA;
    margin: 0;
    padding: 0;
    width: 100%;
	font-size:11px;
}
#footer .footer-container {
    margin: 0 auto;
    padding: 10px 0;
    width: 960px;
}
#footer p {
    float: left;
    font-weight: 300;
    padding-top: 10px;
}

.combo_width{
	width: 138px;
}
  
